{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "outDir": "./lib",
    "noImplicitAny": false,
    "rootDirs": [ "./src"],
    "strict": true,
    "target": "es2017",
    "typeRoots": [ "./node_modules/@types" ]
  },
  "include": [
    "src"
  ]
}
